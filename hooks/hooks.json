{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [{
          "type": "command",
          "command": "/bin/sh ${CLAUDE_PLUGIN_ROOT}/scripts/user-prompt.sh"
        }]
      }
    ],
    "SessionStart": [
      {
        "hooks": [{
          "type": "command",
          "command": "/bin/sh ${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh"
        }]
      }
    ],
    "Stop": [
      {
        "hooks": [{
          "type": "command",
          "command": "/bin/sh ${CLAUDE_PLUGIN_ROOT}/scripts/stop-hook.sh"
        }]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [{
          "type": "command",
          "command": "/bin/sh ${CLAUDE_PLUGIN_ROOT}/scripts/protect-contracts.sh"
        }]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [{
          "type": "command",
          "command": "/bin/sh ${CLAUDE_PLUGIN_ROOT}/scripts/validate-frontmatter.sh"
        }]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [{
          "type": "command",
          "command": "/bin/sh ${CLAUDE_PLUGIN_ROOT}/scripts/post-edit-validate.sh"
        }]
      }
    ]
  }
}
